<main class="space-y-12" id="symbol_{name}">
  {{~#each symbols~}}
    <article class="space-y-5">
      <div class="flex justify-between items-start">
        <div class="font-medium space-y-1">
          <div class="text-xl leading-none">
            <span class="text-{{this.kind.kind}}">{{this.kind.title_lowercase}}</span>&nbsp;<span class="font-bold">{{@root.name}}</span>
          </div>
          {{~this.subtitle~}}
        </div>
      </div>
      {{~#if @first~}}
        {{~> usage usage ~}}
      {{~/if~}}
      <div>
        {{~this.body~}}
      </div>
    </article>
  {{~/each~}}
</main>
