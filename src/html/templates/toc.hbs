{{~#if (or top_symbols document_navigation)~}}
  <div class="toc">
    <div>
      {{~#if top_symbols~}}
        <nav class="topSymbols">
          <h3 class="font-bold text-lg">APIs</h3>
          <ul>
            {{~#each top_symbols.symbols~}}
              <li>
                <a href="{{this.href}}" title="{{this.name}}">
                  {{~> doc_node_kind_icon this.kind~}}
                  <span class="hover:bg-{{this.kind.[0].kind}}/15">{{this.name}}</span>
                </a>
              </li>
            {{~/each~}}
          </ul>
          <a class="flex items-center gap-0.5" href="{{top_symbols.all_symbols_href}}">
            <span class="leading-none">see all symbols</span>
            {{~> icons/arrow ~}}
          </a>
        </nav>
      {{~/if~}}

      {{~#if document_navigation~}}
        <nav class="documentNavigation">
          <h3 class="font-bold text-lg">Document Navigation</h3>
          {{{~document_navigation~}}} {{! table of contents }}
        </nav>
      {{~/if~}}
    </div>
  </div>
{{~/if~}}
