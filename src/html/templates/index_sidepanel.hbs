<nav id="sidepanel">
  {{~> sidepanel_common ~}}

  <div class="max-lg:hidden peer-checked:block">
    {{~#if all_symbols_url~}}
      <a class="mt-1" href="{{all_symbols_url}}">All symbols</a>
    {{~/if~}}

    {{~#if files~}}
      <h2>Modules</h2>
      <ul>
        {{#each files}}
          <li>
            <a href="{{this.href}}" title="{{this.name}}" {{#if this.active}}class="active"{{/if}}>
              <span>{{this.name}}</span>
            </a>
          </li>
        {{~/each~}}
      </ul>
    {{~/if~}}

    {{~#if kind_partitions~}}
      <h2>APIs</h2>
      <ul class="space-y-2">
        {{~#each kind_partitions~}}
          <li>
            <h3>{{this.name}}</h3>
            <ul>
              {{~#each this.symbols~}}
                <li>
                  <a href="{{this.href}}" title="{{this.name}}" {{#if this.deprecated}}class="opacity-60"{{/if}}>
                    {{~> doc_node_kind_icon this.kind ~}}
                    <span {{#if this.deprecated}}class="line-through decoration-2 decoration-stone-500/70 text-stone-500"{{/if}}>{{this.name}}</span>
                  </a>
                </li>
              {{~/each~}}
            </ul>
          </li>
        {{~/each~}}
      </ul>
    {{~/if~}}
  </div>
</nav>
