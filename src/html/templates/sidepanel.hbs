<nav id="sidepanel">
  {{~#if package_name~}}
    <h2 class="text-lg font-semibold">
      <a href="index.html"><span>{{package_name}}</span></a>
    </h2>
  {{~/if~}}

  <div class="space-y-2">
    {{~#each partitions ~}}
      <div>
        <h3 class="subtitle">{{this.name}}</h3>
        <ul>
          {{~#each this.symbols ~}}
          <li>
            <a href="{{this.href}}" title="{{this.name}}" class="{{#if this.active}}active{{/if}} {{#if this.deprecated}}opacity-60{{/if}}">
              {{~> doc_node_kind_icon this.kind~}}
              <span {{#if this.deprecated}}class="line-through decoration-2 decoration-stone-500/70 text-stone-500"{{/if}}>{{this.name}}</span>
            </a>
          </li>
          {{~/each~}}
        </ul>
      </div>
    {{~/each~}}
  </div>
</nav>
